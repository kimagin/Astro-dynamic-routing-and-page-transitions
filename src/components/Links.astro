---
import json from '../data/pages.json'
const pages = [...json.pages]
const links = [
  ...pages.map((page) => {
    return { title: page.title, href: page.slug }
  }),
]
const { home = false } = Astro.props
---

<nav>
  <a
    class="home"
    href={home ? '/' : ''}
    >{home ? 'üè†' : ''}</a
  >
